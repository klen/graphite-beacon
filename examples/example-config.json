// Comments are allowed here
{
  "interval": "20minute",
  "logging": "info",

  "critical_handlers": ["log"],
  "warning_handlers": ["log"],
  "normal_handlers": ["log"],

  // "graphite_url": "http://localhost",

  "alerts": [
    // A graphite alert - be sure to set `graphite_url` appropriately.
    {
      "name": "Memory",
      "query": "aliasByNode(collectd.*.memory.memory-free, 1)",
      "interval": "10minute",
      "format": "bytes",
      "rules": ["warning: < 300MB", "critical: > 200MB"]
    },
    // A ping alert
    {
      "name": "Site",
      "source": "url",
      "query": "http://google.com",
      "interval": "20second",
      "rules": ["critical: != 200"]
    }
  ]
}
